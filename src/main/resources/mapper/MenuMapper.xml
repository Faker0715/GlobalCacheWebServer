<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hw.hwbackend.mapper.MenuMapper">

    <update id="truncateTable" >
        TRUNCATE TABLE ceph
    </update>

    <insert id="insertCephs">
        INSERT INTO ceph (ceph, ip)
        VALUES
        <foreach collection ="cephList" item="ceph" separator =",">
            (#{ceph.ceph}, #{ceph.ip})
        </foreach>
    </insert>

    <select id="selectCephs" resultType="com.hw.hwbackend.entity.Ceph">
        SELECT *
        FROM
            ceph
    </select>








</mapper>